{
  "manifest_version": 3,
  "name": "Utility Man",
  "version": "1.0",
  "description": "Provides solutions for immaculategrid.com puzzles using Sean Lahman's baseball database.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.immaculategrid.com/*",
    "https://hurdb.xyz:3000/api/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.immaculategrid.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Immaculate Grid Solver"
  }
}
