{
  "manifest_version": 3,
  "name": "Utility Man",
  "version": "1.1.0",
  "icons": {
    "128": "icon128.png"
  },
  "description": "Provides solutions for sports-reference.com/immaculate-grid puzzles using Sean Lahman's baseball database.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.sports-reference.com/immaculate-grid/*",
    "https://brennanhurd.com/api/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.sports-reference.com/immaculate-grid/*"],
      "js": [
        "theme-manager.js",
        "dom-helpers.js",
        "ui-components.js",
        "content-formatter.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Utility Man"
  }
}
